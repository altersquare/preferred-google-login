{
	"manifest_version": 3,
	"name": "Preferred Google Login",
	"version": "5.0.1",
	"description": "Automatically use your preferred Google account for each Google service. No more switching between accounts!",
	"permissions": [
		"scripting",
		"storage"
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_popup": "src/popup.html"
	},
	"host_permissions": [
		"*://*.google.com/*",
		"*://*.youtube.com/*",
		"*://*.ai.google/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.google.com/*",
				"*://*.youtube.com/*",
				"*://*.ai.google/*"
			],
			"js": [
				"src/content.js"
			],
			"run_at": "document_start"
		}
	]
}
